#include <stdio.h>
int lengt(int a);
void bp(int N);
main()
{
 unsigned int mask_1,mask_2;
	int i=0,N,l;
	scanf("%d",&N);
	printf("\n");
	bp(N);
	l=lengt(N);
	mask_2=mask_1=0x1;
	mask_1<<=l;
	for(i=0; i < l/2; i++)
	{
		N&=(~mask_2);
		mask_2<<=1;
	}
	mask_2=0x1;
	for(i=0; i < l/2; i++)
	{
		if((mask_1 & N) !=0)
			N|=mask_2;
		mask_1>>=1;
		mask_2<<=1;
	}
	bp(N);
	return 0;
}
lengt(int num)
{
	int i;
	for(i=0; num!=0; i++)
		num=num/2;
	return i-1;
}
void bp(int N)
{
	int mask=0x1,i;
	mask<<=lengt(N);
	for(i=0; i<=lengt(N); i++)
	{
		if(mask & N)
			printf("1");
		else printf("0");
		mask>>=1;
	}
	printf("\n");
}
